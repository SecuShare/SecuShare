# SecuShare Backend Configuration
# Copy this file to .env and modify as needed.

# Environment (development or production)
# In production, stricter validation is enforced.
ENVIRONMENT=development

# Server Configuration
SERVER_BIND_ADDRESS=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DATABASE_PATH=./storage/secushare.db

# File Storage Configuration
STORAGE_PATH=./storage/files

# Authentication Configuration
# IMPORTANT: In production, this MUST be set and be at least 32 characters.
# Example: openssl rand -hex 32
JWT_SECRET=
# Required in production. Optional in development (auto-generated if omitted).
OPAQUE_SERVER_SETUP=
GUEST_DURATION_HOURS=24

# CORS Configuration
# Comma-separated list of allowed origins.
# IMPORTANT: In production, this must NOT be localhost.
ALLOW_ORIGINS=http://localhost:5173

# Reverse proxy trust boundary for client IP extraction (comma-separated IP/CIDR)
# Keep this limited to your actual proxy hops only.
TRUSTED_PROXIES=127.0.0.1,::1

# Email verification
# Required in production.
SMTP_HOST=
SMTP_PORT=587
SMTP_FROM=no-reply@secushare.local
SMTP_USERNAME=
SMTP_PASSWORD=

# Observability
# In production, set METRICS_ENABLED=false unless you protect and consume /metrics.
METRICS_ENABLED=true
METRICS_TOKEN=
